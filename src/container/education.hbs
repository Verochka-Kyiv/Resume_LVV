<div class="p-5">
    {{#with main}}
    <main>
        <section style="background:#c3efc8; color: rgb(15, 15, 72)" class="p-2 pb-0">
            {{> title data = 'My education:' big = true }}
            <ul class="ps-5 mt-0 pb-3">
                {{#each education}}
                <li class="mt-0">
                    {{name}}
                    {{#unless isEnd}} (in progress...) {{/unless}}

                </li>
                {{/each}}
            </ul>
        </section>
        <section style="background:#b8d5e4; color: rgb(15, 15, 72)" class="mt-3 p-2">
            {{> title data = 'My certificates:' big = false}}
            <ul class="ps-5">
                {{#each certificates}}
                <li>
                    {{name}} ({{id}})
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>