<div class="p-5">
    {{#with main}}
    <main>
        <section>
            {{> title data = 'My education:' big = true }}
            <ul class="ps-5">
                {{#each education}}
                <li>
                    {{name}}
                    {{#unless isEnd}} (in progress...) {{/unless}}

                </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{> title data = 'My certificates:' big = false}}
            <ul class="ps-5">
                {{#each certificates}}
                <li>
                    {{name}} ({{id}})
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>